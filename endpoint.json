{
    "label": "Alchemer",
    "name": "alchemer",
    "apiVersion": "v1",
    "internal": false,
    "configurationType": "GLOBAL",
    "deployment": {
        "type": "java11",
        "profiles":[
            {
                "name": "default",
                "label": "Default",
                "memory": 256,
                "description": "Default configuration"
            }
        ],
        "allowMultipleInstances": true
    },
    "icon48": "https://storage.googleapis.com/static.slingrs.io/platform/endpoints/alchemer.png",
    "configurationHelpUrl": "/endpoints-alchemer.html#configuration",
    "status": "ACTIVE",
    "stores": [],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from Alchemer."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "functions": [
        {
            "label": "GET",
            "name": "_get",
            "description": "Sends a GET request",
            "callbacks": [
                {
                    "name": "fileDownloaded",
                    "maxWaitingTime": 120000,
                    "maxExpectedResponses": 1
                },
                {
                    "name": "callback"
                }
            ]
        },
        {
            "label": "POST",
            "name": "_post",
            "description": "Sends a POST request",
            "callbacks": [
                {
                    "name": "callback"
                }
            ]
        },
        {
            "label": "PUT",
            "name": "_put",
            "description": "Sends a PUT request",
            "callbacks": [
                {
                    "name": "callback"
                }
            ]
        },
        {
            "label": "PATCH",
            "name": "_patch",
            "description": "Sends a PATCH request",
            "callbacks": [
                {
                    "name": "callback"
                }
            ]
        },
        {
            "label": "DELETE",
            "name": "_delete",
            "description": "Sends a DELETE request",
            "callbacks": [
                {
                    "name": "callback"
                }
            ]
        },
        {
            "label": "HEAD",
            "name": "_head",
            "description": "Sends a HEAD request",
            "callbacks": [
                {
                    "name": "callback"
                }
            ]
        },
        {
            "label": "OPTIONS",
            "name": "_options",
            "description": "Sends a OPTIONS request",
            "callbacks": [
                {
                    "name": "callback"
                }
            ]
        }
    ],
    "scripts":[
        "functions.js"
    ],
    "flowSteps": [
    ],
    "configuration":[
        {
            "name": "apiKey",
            "label": "API Key",
            "type": "text",
            "required": true

        },
        {
            "name": "apiSecretKey",
            "label": "API Secret Key",
            "type": "text",
            "required": true

        },
        {
            "name": "webhooksSharedKey",
            "label": "Webhooks shared key",
            "type": "text",
            "required": false
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "config.WEBHOOK_URL"
        }
    ]
}